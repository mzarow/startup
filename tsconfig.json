{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "lib": ["ES2018"],
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "alwaysStrict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  }
}
